---
import brandIcon from '../images/icon-brand-recognition.svg';
import detailedRecordsIcon from '../images/icon-detailed-records.svg';
import customizeIcon from '../images/icon-fully-customizable.svg';
import Card from './Card.astro';
const brandTitle = 'Brand Recognition';
const brandDesc = 'Boost your brand recognition with each click. Generic links donâ€™t mean a thing. Branded links help instil confidence in your content.';
const detailedTitle = 'Detailed Records';
const detailedDesc = 'Gain insights into who is clicking your links. Knowing when and where people engage with your content helps inform better decisions.';
const customizeTitle = 'Fully Customizable';
const customizeDesc = 'Improve brand awareness and content discoverability through customizable links, supercharging audience engagement.';
---

<section class='bg-statsBg flex flex-col gap-[5.75rem]'> 
  <header class='w-[100%] flex flex-col items-center'>
    <h1 class='mb-4 font-bold text-statsHeader tracking-tighter leading-extraLoose'>Advanced Statistics</h1>
    <p class='text-center text-secondarytxt tracking-wide leading-normal'>
      Track how your links are performing across the web with our advanced statistics dashboard</p>
  </header>
<Card title={detailedTitle} desc={detailedDesc} svgURL={detailedRecordsIcon}/>
  <Card title={customizeTitle} desc={customizeDesc} svgURL={customizeIcon}/>
  <Card title={brandTitle} desc={brandDesc} svgURL={brandIcon}/>
</section>
